<idea-plugin version="2">
  <id>marekbruchaty.UTDDPlugin</id>
  <name>UTDD Plugin</name>
  <version>1.0</version>
  <vendor email="marekbruchaty@gmail.com" url="http://www.stuba.sk">YourCompany</vendor>

  <description><![CDATA[
      This plugin is intended to be used for creation and execution of unit tests when using test driven development.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="generateSrcFromTest" class="marekbruchaty.UTDDPlugin.GenerateAction" text="GenerateSrcFromTest"
            description="Generates classes and class methods from defined unit test">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
    </action>
  </actions>

</idea-plugin>