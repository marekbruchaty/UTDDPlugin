<idea-plugin version="2">
  <id>marekbruchaty.UTDDPlugin</id>
  <name>UTDD Plugin</name>
  <version>1.0</version>
  <vendor email="marekbruchaty@gmail.com" url="http://www.stuba.sk">YourCompany</vendor>

  <description><![CDATA[
      This plugin is intended to be used for creation and execution of unit tests when using test driven development.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>


  <application-components>
    <!-- Add your application components here -->
    <component>
      <implementation-class>main.java.PluginRegistration</implementation-class>
    </component>
  </application-components>

  <actions>
    <group id="UTDDPluginGroup" text="Unit TDD Generator" popup="true">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
      <action id="TestClassActionID" class="main.java.TestClassAction" text="Create Test/Main Classes"
              description="Test class generator">
        <!--<add-to-group group-id="CodeMenu" anchor="last"/>-->
        <!--<add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>-->
        <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta alt c"/>
      </action>
      <action id="TestMethodActionID" class="main.java.TestMethodAction" text="Create Test/Main Methods"
              description="Test method generator">
        <!--<add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>-->
        <keyboard-shortcut keymap="$default" first-keystroke="ctrl meta alt m"/>
      </action>
    </group>
  </actions>

</idea-plugin>